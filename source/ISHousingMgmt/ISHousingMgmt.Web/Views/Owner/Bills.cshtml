@model ISHousingMgmt.Web.Models.Owner.BillsModel

@{
	ViewBag.Title = "Moji računi";
}

@section SideMenu {
	@if(Model.CurrentRole == "owner"){
		@Html.Partial("OwnerSideMenu", Model.Links)
	} else {
		@Html.Partial("MainMenu")
	}
}
<h2>@ViewBag.Title</h2>

<fieldset>
	<legend>Neplaćeni računi</legend>

			<table>
				<tr>
					<th>Broj računa</th>
					<th>Poziv na broj</th>
					<th>Izdao</th>
					<th>Iznos</th>
					<th>Iznos+PDV</th>
					<th>Plaćeno</th>
				</tr>
				@foreach (var bill in Model.UnpaidBills) {
					<tr>
						<td>
							@Html.ActionLink(bill.Id.ToString(), "bill", new { Id = bill.Id })
						</td>
						<td>@bill.ReferenceNumber</td>
						<td>@bill.BuildingName</td>
						<td>@bill.TotalAmount kn</td>
						<td>@bill.TotalAmountWithTax kn</td>
						<td>@(bill.IsPaid ? "Da" : "Ne")</td>
					</tr>
	}
			</table>

</fieldset>

<fieldset>
	<legend>Plaćeni računi</legend>

			<table>
				<tr>
					<th>Broj računa</th>
					<th>Poziv na broj</th>
					<th>Izdao</th>
					<th>Iznos</th>
					<th>Iznos+PDV</th>
					<th>Plaćeno</th>
				</tr>
				@foreach (var bill in Model.PaidBills) {
					<tr>
						<td>
							@Html.ActionLink(bill.Id.ToString(), "bill", new { Id = bill.Id })
						</td>
						<td>@bill.ReferenceNumber</td>
						<td>@bill.BuildingName</td>
						<td>@bill.TotalAmount kn</td>
						<td>@bill.TotalAmountWithTax kn</td>
						<td>@(bill.IsPaid ? "Da" : "Ne")</td>
					</tr>
	}
			</table>

</fieldset>