@model ISHousingMgmt.Web.Models.Account.LogInModel

@{
	Layout = "~/Views/Shared/_3_6_3Layout.cshtml";
    ViewBag.Title = "Prijava";
}

<div id="registration-links">
	<h3>Registracija upravitelja ili izvođača radova</h3>
	<p>
		Ukoliko ste upravitelj ili izvođač radova, a nemate otvoren korisnički račun možete se registrirati na sljedećim linkovima:
	</p>

	<ul>
		<li>@Html.ActionLink("Registracija suvlasnika", "register/owner")</li>
		<li>@Html.ActionLink("Registracija upravitelja", "register/manager")</li>
		<li>@Html.ActionLink("Registracija izvođača radova", "register/contractor")</li>
	</ul>

</div>

<h2>Prijava na sustav</h2>
<p>Molimo vas da unesete svoje korisničko ime i lozinku.</p>

<script src="@Url.Content("~/public/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/public/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Pijava na sustav nije uspjela. Molimo vas da ispravite pogreške i pokušajte ponovno.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Podaci za prijavu</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value="Prijava" />
            </p>
        </fieldset>
    </div>
}

